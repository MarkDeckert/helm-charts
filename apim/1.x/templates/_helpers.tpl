{{- end -}}
{{- end -}}


{{/*
Create auth header for api
*/}}
{{- define "gravitee.api.authheader" -}}
{{- $auth := printf "admin:%s" .Values.api.http.services.core.http.authentication.password -}}
{{- $base64auth := b64enc $auth -}}
{{- printf "Basic %s" $base64auth -}}
{{- end -}}

{{/*
